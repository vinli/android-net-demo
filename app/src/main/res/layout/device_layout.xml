<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:weightSum="1.0">

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="0.75">

    <TextView
      android:id="@+id/device_name"
      android:text="@string/device_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:id="@+id/latest_vehicle"
      android:text="@string/latest_vehicle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:id="@+id/latest_location"
      android:text="@string/latest_location"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:id="@+id/odometer_estimate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  </LinearLayout>

  <Button
    android:id="@+id/stream_button"
    android:text="@string/stream_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

</LinearLayout>